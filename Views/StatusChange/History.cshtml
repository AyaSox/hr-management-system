@model IEnumerable<HRManagementSystem.Models.StatusChangeRequest>

@{
    ViewData["Title"] = "Status Change History";
    var employeeName = ViewBag.EmployeeName as string;
}

<h2><i class="fas fa-history"></i> Status Change History</h2>
<h4>@employeeName</h4>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        No status change requests found for this employee.
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Date Requested</th>
                            <th>From Status</th>
                            <th>To Status</th>
                            <th>Reason</th>
                            <th>Requested By</th>
                            <th>Status</th>
                            <th>Approved By</th>
                            <th>Approval Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>
                                    @request.RequestedDate.ToString("MMM dd, yyyy")
                                    <br>
                                    <small class="text-muted">@request.RequestedDate.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    @switch (request.FromStatus)
                                    {
                                        case HRManagementSystem.Models.EmployeeStatus.Active:
                                            <span class="badge bg-success">Active</span>
                                            break;
                                        case HRManagementSystem.Models.EmployeeStatus.OnLeave:
                                            <span class="badge bg-warning">On Leave</span>
                                            break;
                                        case HRManagementSystem.Models.EmployeeStatus.Inactive:
                                            <span class="badge bg-danger">Inactive</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @switch (request.ToStatus)
                                    {
                                        case HRManagementSystem.Models.EmployeeStatus.Active:
                                            <span class="badge bg-success">Active</span>
                                            break;
                                        case HRManagementSystem.Models.EmployeeStatus.OnLeave:
                                            <span class="badge bg-warning">On Leave</span>
                                            break;
                                        case HRManagementSystem.Models.EmployeeStatus.Inactive:
                                            <span class="badge bg-danger">Inactive</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@request.Reason">
                                        @request.Reason
                                    </span>
                                </td>
                                <td>@request.RequestedBy</td>
                                <td>
                                    @switch (request.Status)
                                    {
                                        case HRManagementSystem.Models.StatusChangeRequestStatus.Pending:
                                            <span class="badge bg-warning"><i class="fas fa-clock"></i> Pending</span>
                                            break;
                                        case HRManagementSystem.Models.StatusChangeRequestStatus.Approved:
                                            <span class="badge bg-success"><i class="fas fa-check"></i> Approved</span>
                                            break;
                                        case HRManagementSystem.Models.StatusChangeRequestStatus.Rejected:
                                            <span class="badge bg-danger"><i class="fas fa-times"></i> Rejected</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(request.ApprovedBy))
                                    {
                                        @request.ApprovedBy
                                        @if (!string.IsNullOrEmpty(request.ApprovalComments))
                                        {
                                            <br><small class="text-muted" title="@request.ApprovalComments">
                                                <i class="fas fa-comment"></i> Comments
                                            </small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (request.ApprovedDate.HasValue)
                                    {
                                        @request.ApprovedDate.Value.ToString("MMM dd, yyyy")
                                        <br><small class="text-muted">@request.ApprovedDate.Value.ToString("HH:mm")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<div class="mt-3">
    <a href="javascript:history.back()" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back
    </a>
</div>

<style>
    .fas {
        font-family: "Font Awesome 5 Free";
        font-weight: 900;
    }
</style>