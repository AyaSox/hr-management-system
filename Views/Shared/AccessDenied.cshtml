@{
    ViewData["Title"] = "Access Denied";
}

<div class="text-center">
    <div class="mb-4">
        <i class="fas fa-lock" style="font-size: 4rem; color: #dc3545;"></i>
    </div>
    <h1 class="display-4 text-danger">Access Denied</h1>
    <p class="lead">You don't have permission to access this resource.</p>
    <hr class="my-4">
    <p>
        This action requires <strong>Administrator</strong> privileges.
        <br>Please contact your system administrator if you believe this is an error.
    </p>
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-home"></i> Return to Home
        </a>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-secondary">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>
</div>

<style>
    .fas {
        font-family: "Font Awesome 5 Free";
        font-weight: 900;
    }
</style>