@model X.PagedList.IPagedList<HRManagementSystem.Models.AuditLog>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Audit Trail";
}

<h1><i class="fas fa-history"></i> System Audit Trail</h1>
<p class="text-muted">Track all system changes and user activities</p>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-2">
        <div class="col-md-4">
            <input name="searchUser" class="form-control" placeholder="Search by user"
                   value="@ViewBag.SearchUser" />
        </div>
        <div class="col-md-4">
            <select name="searchTable" class="form-select">
                <option value="">All Tables</option>
                <option value="Employees" selected="@(ViewBag.SearchTable == "Employees")">Employees</option>
                <option value="Departments" selected="@(ViewBag.SearchTable == "Departments")">Departments</option>
            </select>
        </div>
        <div class="col-md-4">
            <button class="btn btn-primary">Filter</button>
            <a asp-action="Index" class="btn btn-secondary">Clear</a>
        </div>
    </div>
</form>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Timestamp</th>
                    <th>User</th>
                    <th>Action</th>
                    <th>Table</th>
                    <th>Record ID</th>
                    <th>Changes</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <small>@item.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</small>
                        </td>
                        <td>
                            <span class="badge bg-info">@item.UserName</span>
                        </td>
                        <td>
                            @if (item.Action == "INSERT")
                            {
                                <span class="badge bg-success">CREATE</span>
                            }
                            else if (item.Action == "UPDATE")
                            {
                                <span class="badge bg-warning">UPDATE</span>
                            }
                            else if (item.Action == "DELETE")
                            {
                                <span class="badge bg-danger">DELETE</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@item.Action</span>
                            }
                        </td>
                        <td>@item.TableName</td>
                        <td>@item.RecordId</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Changes))
                            {
                                <small class="text-muted">@item.Changes</small>
                            }
                            else
                            {
                                <small class="text-muted">-</small>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.AuditLogId" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i> View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="text-center py-4">
                <i class="fas fa-search" style="font-size: 3rem; color: #ccc;"></i>
                <p class="text-muted mt-2">No audit records found</p>
            </div>
        }
    </div>
</div>

<div class="d-flex justify-content-center mt-3">
    @Html.PagedListPager(Model, page => Url.Action("Index", new {
        page,
        searchUser = ViewBag.SearchUser,
        searchTable = ViewBag.SearchTable
    }))
</div>

<p class="text-muted text-center mt-2">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    (Showing @Model.Count of @Model.TotalItemCount records)
</p>

<style>
    .fas {
        font-family: "Font Awesome 5 Free";
        font-weight: 900;
    }
</style>