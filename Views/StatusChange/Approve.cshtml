@model HRManagementSystem.Models.ViewModels.StatusChangeApprovalViewModel

@{
    ViewData["Title"] = "Approve Status Change";
}

<h2><i class="fas fa-gavel"></i> Review Status Change Request</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Status Change Request Details</h5>
            </div>
            <div class="card-body">
                <!-- Request Information -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6><i class="fas fa-user"></i> Employee</h6>
                        <p class="fw-bold">@Model.EmployeeName</p>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="fas fa-calendar"></i> Requested</h6>
                        <p>@Model.RequestedDate.ToString("MMMM dd, yyyy 'at' HH:mm")</p>
                        <small class="text-muted">By: @Model.RequestedBy</small>
                    </div>
                </div>

                <!-- Status Change Details -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6>Current Status</h6>
                        @switch (Model.FromStatus)
                        {
                            case HRManagementSystem.Models.EmployeeStatus.Active:
                                <span class="badge bg-success fs-6"><i class="fas fa-check-circle"></i> Active</span>
                                break;
                            case HRManagementSystem.Models.EmployeeStatus.OnLeave:
                                <span class="badge bg-warning fs-6"><i class="fas fa-clock"></i> On Leave</span>
                                break;
                            case HRManagementSystem.Models.EmployeeStatus.Inactive:
                                <span class="badge bg-danger fs-6"><i class="fas fa-times-circle"></i> Inactive</span>
                                break;
                        }
                    </div>
                    <div class="col-md-6">
                        <h6>Requested Status</h6>
                        @switch (Model.ToStatus)
                        {
                            case HRManagementSystem.Models.EmployeeStatus.Active:
                                <span class="badge bg-success fs-6"><i class="fas fa-check-circle"></i> Active</span>
                                break;
                            case HRManagementSystem.Models.EmployeeStatus.OnLeave:
                                <span class="badge bg-warning fs-6"><i class="fas fa-clock"></i> On Leave</span>
                                break;
                            case HRManagementSystem.Models.EmployeeStatus.Inactive:
                                <span class="badge bg-danger fs-6"><i class="fas fa-times-circle"></i> Inactive</span>
                                break;
                        }
                    </div>
                </div>

                <!-- Reason -->
                <div class="mb-4">
                    <h6><i class="fas fa-comment-alt"></i> Reason for Change</h6>
                    <div class="card border-light">
                        <div class="card-body">
                            <p class="mb-0">@Model.Reason</p>
                        </div>
                    </div>
                </div>

                <!-- Approval Form -->
                <form asp-action="Approve" method="post">
                    <input type="hidden" asp-for="RequestId" />
                    <input type="hidden" asp-for="EmployeeName" />
                    <input type="hidden" asp-for="FromStatus" />
                    <input type="hidden" asp-for="ToStatus" />
                    <input type="hidden" asp-for="Reason" />
                    <input type="hidden" asp-for="RequestedBy" />
                    <input type="hidden" asp-for="RequestedDate" />

                    <div class="mb-3">
                        <h6>Approval Decision</h6>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Approved" value="true" id="approve">
                            <label class="form-check-label text-success" for="approve">
                                <i class="fas fa-check-circle"></i> Approve
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Approved" value="false" id="reject">
                            <label class="form-check-label text-danger" for="reject">
                                <i class="fas fa-times-circle"></i> Reject
                            </label>
                        </div>
                        <span asp-validation-for="Approved" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ApprovalComments" class="form-label"></label>
                        <textarea asp-for="ApprovalComments" class="form-control" rows="3" 
                                  placeholder="Optional comments about your decision (will be logged in audit trail)"></textarea>
                        <span asp-validation-for="ApprovalComments" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-gavel"></i> Submit Decision
                        </button>
                        <a asp-action="Pending" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Pending
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-shield-alt"></i> Approval Guidelines</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="fas fa-check text-success"></i> Verify the reason is valid</li>
                    <li class="mb-2"><i class="fas fa-check text-success"></i> Consider business impact</li>
                    <li class="mb-2"><i class="fas fa-check text-success"></i> Check with line manager if needed</li>
                    <li class="mb-2"><i class="fas fa-check text-success"></i> Document your decision</li>
                </ul>
                
                <hr>
                
                <div class="alert alert-info">
                    <small>
                        <i class="fas fa-info-circle"></i>
                        Your decision will be logged in the audit trail and the employee will be notified.
                    </small>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-user"></i> Quick Actions</h6>
            </div>
            <div class="card-body">
                <a asp-controller="Employees" asp-action="Details" asp-route-id="@Model.RequestId" class="btn btn-outline-primary btn-sm w-100 mb-2">
                    <i class="fas fa-eye"></i> View Employee Details
                </a>
                <a asp-action="History" asp-route-id="@Model.RequestId" class="btn btn-outline-secondary btn-sm w-100">
                    <i class="fas fa-history"></i> View Status History
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const approved = document.querySelector('input[name="Approved"]:checked');
            if (!approved) {
                e.preventDefault();
                alert('Please select whether to approve or reject this request.');
                return false;
            }
        });
    </script>
}

<style>
    .fas {
        font-family: "Font Awesome 5 Free";
        font-weight: 900;
    }
</style>